<br><br><br>
<div class = "row">
	<div class="center-align">
		<div class = "col s4 offset-s4">
			<h2>Sign Up</h2>
			<br><br>
			<%= form_for(@user, url: {action: :create, controller: :users}, method: :post) do |f| %>
				<%= f.label "Full Name" %>
				<%= f.text_field :name %>

				<%= f.label "Username" %>
				<%= f.text_field :username %>

				<%= f.label "password" %>
				<%= f.password_field :password %>

				<%= f.label "confirm password" %>
				<%= f.password_field :password_confirmation %>
				<div class="row"></div>
				<div class="row"></div>
				<div class="row">
					<div class="col s4">
						<b>UPLOAD YOUR PIC</b>
					</div>
					<div class="col s3 offset-s3">
						<%= f.file_field(:profile_picture) %>
					</div>
				</div>
				<div class="row"></div>

				<%= f.submit "Signup Now", :class => "waves-effect waves-light btn"%>
			<% end %>
			
		</div>
		
	</div>
</div>
