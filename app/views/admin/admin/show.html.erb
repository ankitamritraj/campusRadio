<h3>
	<%= @user["username"].upcase %> 
</h3>
<div class="row">
	<div class="col s6 offset-s5">
		<h4>Add A New Song</h4>
	</div>
<br><br>
<br><br>
<br>

	<%= form_for(@song, url:{controller: :admin, action: :uploadSong}, html: {multipart: true}) do |f|%>
	    <div class="col s6 offset-s3">

	      <div class="row">
	        <div class="input-field">
	          <i class="material-icons prefix">queue_music</i>
	          <%= f.label("Song Name", :class => "validate active") %>
	          <%= f.text_field(:name)%>
	        </div>
	      </div>

	      <div class = "row">
	        <div class="input-field">
	          <i class="material-icons prefix">person_pin</i>
	          <%= f.label("Artist Name", :class => "validate active") %>
	          <%= f.text_field(:artist)%>
	        </div>
	      </div>

	      <div class = "row">
	        <div class="input-field">
	          <i class="material-icons prefix">library_music</i>
	          <%= f.label("Album Name", :class => "validate active") %>
	          <%= f.text_field(:album)%>
	        </div>
	      </div>

	      <div class = "row">
	        <div class="input-field">
	          <i class="material-icons prefix">info</i>
	          <%= f.label("Genre", :class => "validate active") %>
	          <%= f.text_field(:album)%>
	        </div>
	      </div>
	    <div class = "row">
	    	<div class="col s10">
				<%= f.file_field(:songs) %>
	    	</div>
			<div class="col s2">
				<%= f.submit("UPLOAD", :class => "waves-effect waves-light btn") %>
			</div>
	    </div>

  	<br><br>

	<% end %>
</div>	
